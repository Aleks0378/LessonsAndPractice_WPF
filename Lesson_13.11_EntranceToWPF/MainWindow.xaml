<Window x:Class="Lesson_13._11_EntranceToWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_13._11_EntranceToWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите стоимость покупки:" Margin="0,0,0,10"/>
            <TextBox x:Name="purchaseTextBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Добавить к общей сумме" Click="CalculateTotalButtonClick" Width="200" Margin="0,0,0,10"/>
            <TextBlock x:Name="totalTextBlock" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
