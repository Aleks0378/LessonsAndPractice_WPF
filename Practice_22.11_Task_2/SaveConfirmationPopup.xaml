<Window x:Class="Practice_22._11_Task_2.SaveConfirmationPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice_22._11_Task_2"
        mc:Ignorable="d"
        Title="Подтверждение сщхранения" Height="150" Width="400" WindowStartupLocation="CenterOwner" Topmost="True">
    <Grid>
        <TextBlock Text="Вы уверены, что хотите сохранить заметку?" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Да" Width="80" Height="25" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="YesButton_Click"/>
        <Button Content="Нет" Width="80" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="NoButton_Click"/>
    </Grid>
</Window>
